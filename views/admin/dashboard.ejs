<div class="admin-title">
  <h2>POSTS</h2>
  <a href="/add-post" class="button"> +Add New </a>
</div>

<ul class="admin-post">
  <% data.forEach(element => { %>
  <li>
    <a href="/post/<%= element._id %>"> <%= element.title %>&nearr; </a>
    <div class="admin-post-controls">
      <a href="/edit-post/<%= element._id %>" class="btn"> Edit </a>
      <form
        action="/delete-post/<%= element._id %>?_method=DELETE"
        method="POST"
      >
        <input type="submit" value="Delete" class="btn" />
      </form>
    </div>
  </li>
  <% }) %>
</ul>
